extends layout

block content	

	<!--Navbar Content-->
	navbar.navbar-inverse.navbar-fixed-top.bs-docs-nav(role='banner')
		.container-fluid
			.navbar-header
				button.navbar-toggle(type='button', data-toggle='collapse', data-target='.bs-navbar-collapse')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(id='logo', href='/surveys')
					img(alt='Home', src='/images/surveyHQ_logo.png' class='img-rounded' width='50' height='50')
			nav.collapse.navbar-collapse.bs-navbar-collapse(role='navigation')
				ul.nav.navbar-nav.navbar-right 
					li
						a(href='/logout') 
							i.glyphicon.glyphicon-log-out
							span  Log out
				.centered            
					h1 SurveyHQ
	div.content
		p.text-center.lead #{question}
		form(method='post', action='/save_answer')
			each answer in answers
				.col-md-4
				.radio
					label
						input(type='radio', name='answer_id', id='Aid_'+ answer.Aid, value=answer.Aid)
						p=answer.content
			p
				.col-md-4.text-center
				button.btn.btn-primary.btn-lg(type='submit', role='button') Submit
				input(type='hidden', name='q_id', id='question_id', value=question_id)
				input(type='hidden', name='s_id', id='survey_id', value=survey_id)
				

